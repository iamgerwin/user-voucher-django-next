# ======================================
# Docker Compose Configuration
# ======================================

# PostgreSQL Configuration
POSTGRES_DB=voucher_system
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis
REDIS_PORT=6379

# ======================================
# Django Backend Configuration
# ======================================

DJANGO_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-base64-32
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Database URL (used by Django)
DATABASE_URL=postgresql://postgres:postgres@db:5432/voucher_system

# Redis URL (used by Django)
REDIS_URL=redis://:redis@redis:6379/0

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Django Superuser (optional - for auto-creation on startup)
DJANGO_SUPERUSER_USERNAME=
DJANGO_SUPERUSER_EMAIL=
DJANGO_SUPERUSER_PASSWORD=

# ======================================
# Next.js Frontend Configuration
# ======================================

NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# ======================================
# Port Configuration
# ======================================

BACKEND_PORT=8000
FRONTEND_PORT=3000
