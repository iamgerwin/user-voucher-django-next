# Development Dockerfile for Django backend
FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    DJANGO_SETTINGS_MODULE=config.settings.development

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    curl \
    git \
    postgresql-client \
    redis-tools \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r django && useradd -r -g django django

# Create application directories
RUN mkdir -p /app /app/staticfiles /app/mediafiles && \
    chown -R django:django /app

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements/base.txt requirements/development.txt requirements/

# Install Python dependencies
RUN pip install --upgrade pip && \
    pip install -r requirements/development.txt

# Copy application code
COPY --chown=django:django . .

# Copy entrypoint script and make it executable
COPY --chown=django:django entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

# Switch to non-root user
USER django

# Expose port
EXPOSE 8000

# Expose debugger port
EXPOSE 5678

# Set entrypoint
ENTRYPOINT ["/app/entrypoint.sh"]

# Default command for development (can be overridden)
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
